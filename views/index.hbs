                <img class="d-block " src="/assets/images/slider/slider1.jpeg" alt="First slide"
                    style="max-height:550px; width:100%; ">
            </div>
        </div>
        <div class="carousel-item">
            <div class="container-fluid" style="padding-right: 0px; padding-left: 0px;">
                <img class="d-block " src="/assets/images/slider/slider3.jpeg" alt="First slide"
                    style="max-height:550px; width:100%; ">
            </div>
        </div>
    </div>
    <div class="carousel-item">
        <div class="container-fluid" style="padding-right: 0px; padding-left: 0px;">
            <img class="d-block " src="/assets/images/slider/slider1.jpeg" alt="First slide"
                style="max-height:550px; width:100%; ">
        </div>

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h6 class="page-titles">TOP SERVER TODAY</h6>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <h6 class="page-titles"> <a class="moreView" href="#"> View All </a></h6>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" style="min-height: auto;">
        <div class="row">
            <div class="col-md-12">
                <div class="items" show>
                    {{#each topProduct}}
                    <div class="card border" data-price="{{price}}" data-rating="{{price}}">
                        <a href="/moreDetail/{{product_id}}">
                            <div class="innerImage">
                                <img class="card-img-top card-item-image" src="/{{image}}" alt="Card image cap"
                                    height="150" width="42">
                            </div>
                        </a>
                        <div class="card-body" style="padding: 1.25rem 1.25rem 1rem 1.25rem;">
                            <h4 class="card-title card-item-title">{{product_name}}</h4>
                            <h7 class="cardIcons">

                                <i class="mdi mdi-check-circle"></i>
                                <span style="font-weight: 500;">Avaliable in</span>&nbsp;-&nbsp;{{weight}}&nbsp;{{unit}}
                            </h7>
                            <div class="cards-footer" style="margin-top: 1rem; margin-bottom: 1rem; ">
                                <a id="addTocart"
                                    class="btn btn-sm  btn-rounded  waves-effect wave-light btn-red  text-white  float-right"
                                    style="cursor:pointer" data-product_id="{{product_id}}"> <i
                                        class="mdi mdi-cart-outline"></i>&nbsp;ADD TO CART</a>
                                <span class="card-rate card-item-price">Rs {{price}}</span>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>

